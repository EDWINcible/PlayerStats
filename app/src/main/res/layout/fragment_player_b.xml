<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/player_b_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_b_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignBottom="@id/player_b_image_view"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_b_shoot"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Shoot"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_alignBottom="@id/player_b_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_b_dribble"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Dribble"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_alignBottom="@id/player_b_shoot"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_b_pass"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Pass"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_alignBottom="@id/player_b_dribble"
        />
</LinearLayout>